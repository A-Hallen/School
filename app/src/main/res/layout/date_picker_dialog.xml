<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/round_corner_blank"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <DatePicker
        android:calendarTextColor="@color/primary"
        android:id="@+id/date_picker"
        android:theme="@style/MaterialCalendar"
        android:headerBackground="@drawable/date_picker_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel_button"
            android:background="@drawable/round_corner_button_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/ok_button"
            android:background="@drawable/round_corner_button_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/aceptar"/>
    </LinearLayout>


</LinearLayout>