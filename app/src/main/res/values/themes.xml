<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.School" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">#DF6202</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">#FFEB3B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundCorner" parent="">
        <item name="background">@drawable/edit_text_bg</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">37.5dp</item>
        <item name="color">@color/white</item>
    </style>
    <style name="MarginEdit" parent="Widget.AppCompat.EditText">
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="hintTextColor">@color/soft_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <color name="primary">#FF9800</color>
    <style name="Theme.School.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.School.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.School.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MaterialCalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/primary</item>
    </style>

    <style name="TableCells" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/form</item>
    </style>
</resources>